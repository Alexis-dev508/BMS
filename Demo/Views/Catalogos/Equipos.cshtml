                        <div class="form-group m-2">
                            <label asp-for="Serie" class="control-label">Serie</label>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <input asp-for="Serie" class="form-control" />
                        </div>
                        <div class="form-group m-2">
                            @Html.Label("tipo","Tipo",new {@class="control-label"})
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.DropDownList("tipo",Model.MarcasList, new {@class="form-control"})
