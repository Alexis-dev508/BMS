        <div class="col-sm-12">
            <form method="post" asp-action="GuardarEquipo" asp-controller="Catalogos">
                <div class="form-inline">
                    <div class="form-group">
                        <div class="form-group m-2">
                            <label asp-for="Equipo" class="control-label">Equipo</label>
                            
                            <input asp-for="Equipo" class="form-control" />
                        </div>
                         
                        <div class="form-group m-2">
                            <input asp-for="Nombre" class="form-control" />
                        </div>
                       
                        <div class="form-group m-2">
                            <label asp-for="Abrev" class="control-label">Abrev</label>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <input asp-for="Abrev" class="form-control" />
                        </div>
                        
                        <div class="form-group m-2">
                            @Html.Label("status","Status",new {@class="control-label"})
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.DropDownList("status",Model.StatusList,new {@class="form-control"})
                        </div>
                       
                        <div class="form-group m-2">
