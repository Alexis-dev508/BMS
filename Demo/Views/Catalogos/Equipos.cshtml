                        <div class="form-group m-2">
                            @Html.Label("color","Color",new {@class="control-label"})
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.DropDownList("color",Model.MarcasList, new {@class="form-control"})
                            
